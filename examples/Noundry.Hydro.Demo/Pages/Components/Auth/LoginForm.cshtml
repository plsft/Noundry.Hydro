@model LoginForm

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="text-center">
            <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
                Sign in to your account
            </h2>
            <p class="mt-2 text-sm text-gray-600">
                Welcome to the Noundry.Hydro Demo
            </p>
        </div>

        <form class="mt-8 space-y-6" on:submit="@(() => Model.SignIn())">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <noundry-alert type="error" dismissible="true" title="Login Failed">
                    @Model.ErrorMessage
                </noundry-alert>
            }

            <div class="space-y-4">
                <div>
                    <label for="Email" class="block text-sm font-medium text-gray-700">
                        Email Address <span class="text-red-500">*</span>
                    </label>
                    <input id="Email" 
                           name="@nameof(Model.Email)" 
                           type="email" 
                           autocomplete="email" 
                           required 
                           bind="@Model.Email"
                           class="mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                           placeholder="Enter your email address" />
                    <span asp-validation-for="Email" class="text-red-500 text-xs mt-1"></span>
                </div>

                <div>
                    <label for="Password" class="block text-sm font-medium text-gray-700">
                        Password <span class="text-red-500">*</span>
                    </label>
                    <input id="Password" 
                           name="@nameof(Model.Password)" 
                           type="password" 
                           autocomplete="current-password" 
                           required 
                           bind="@Model.Password"
                           class="mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                           placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-red-500 text-xs mt-1"></span>
                </div>

                <div class="flex items-center">
                    <input id="RememberMe" 
                           name="@nameof(Model.RememberMe)" 
                           type="checkbox" 
                           bind="@Model.RememberMe"
                           class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" />
                    <label for="RememberMe" class="ml-2 block text-sm text-gray-700">
                        Remember me
                    </label>
                </div>
            </div>

            <div class="space-y-4">
                <button type="submit" 
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:opacity-50 disabled:cursor-not-allowed"
                        disabled="@Model.IsLoading">
                    @if (Model.IsLoading)
                    {
                        <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="m12 2a10 10 0 0 1 10 10h-2a8 8 0 0 0-8-8v-2z"></path>
                        </svg>
                        <span>Signing in...</span>
                    }
                    else
                    {
                        <span>Sign in</span>
                    }
                </button>

                <div class="text-center">
                    <button type="button" 
                            on:click="@(() => Model.ClearForm())"
                            class="text-sm text-indigo-600 hover:text-indigo-500">
                        Clear Form
                    </button>
                </div>
            </div>

            <div asp-if="@Model.Options.DevelopmentMode" class="border-t border-gray-200 pt-4">
                <p class="text-center text-sm text-gray-600 mb-3">Demo Credentials (Development Mode)</p>
                <div class="grid grid-cols-3 gap-2">
                    <button type="button" 
                            on:click="@(() => Model.FillDemoCredentials("admin"))"
                            class="px-3 py-2 text-xs bg-purple-100 text-purple-700 rounded hover:bg-purple-200">
                        Admin User
                    </button>
                    <button type="button" 
                            on:click="@(() => Model.FillDemoCredentials("manager"))"
                            class="px-3 py-2 text-xs bg-blue-100 text-blue-700 rounded hover:bg-blue-200">
                        Manager User
                    </button>
                    <button type="button" 
                            on:click="@(() => Model.FillDemoCredentials("customer"))"
                            class="px-3 py-2 text-xs bg-green-100 text-green-700 rounded hover:bg-green-200">
                        Customer User
                    </button>
                </div>
            </div>

            <div class="text-center">
                <p class="text-sm text-gray-600">
                    Don't have an account?
                    <a href="/Identity/Account/Register" class="font-medium text-indigo-600 hover:text-indigo-500">
                        Sign up here
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>