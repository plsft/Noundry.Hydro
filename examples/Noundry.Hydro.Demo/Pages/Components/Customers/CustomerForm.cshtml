@model CustomerForm

<div class="space-y-6">
    <form on:submit="@(() => Model.SaveCustomer())">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Personal Information -->
            <div class="space-y-4">
                <h4 class="text-lg font-medium text-gray-900">Personal Information</h4>
                
                <!-- Using Noundry.UI form components -->
                <noundry-text-input 
                    label="First Name" 
                    name="@nameof(Model.FirstName)"
                    placeholder="Enter first name"
                    required="true"
                    bind="@Model.FirstName" />

                <noundry-text-input 
                    label="Last Name" 
                    name="@nameof(Model.LastName)"
                    placeholder="Enter last name"
                    required="true"
                    bind="@Model.LastName" />

                <noundry-text-input 
                    label="Email Address" 
                    name="@nameof(Model.Email)"
                    type="email"
                    placeholder="customer@example.com"
                    required="true"
                    bind="@Model.Email"
                    on:blur="@(() => Model.CheckEmailAvailability())" />

                <noundry-text-input 
                    label="Phone Number" 
                    name="@nameof(Model.Phone)"
                    type="tel"
                    placeholder="+1-555-0123"
                    bind="@Model.Phone" />
            </div>

            <!-- Address Information -->
            <div class="space-y-4">
                <h4 class="text-lg font-medium text-gray-900">Address Information</h4>
                
                <!-- Using Noundry.UI address components -->
                <noundry-text-input 
                    label="Street Address" 
                    name="@nameof(Model.Address)"
                    placeholder="123 Main Street"
                    bind="@Model.Address" />

                <div class="grid grid-cols-2 gap-4">
                    <noundry-text-input 
                        label="City" 
                        name="@nameof(Model.City)"
                        placeholder="New York"
                        bind="@Model.City" />

                    <noundry-text-input 
                        label="Postal Code" 
                        name="@nameof(Model.PostalCode)"
                        placeholder="10001"
                        bind="@Model.PostalCode" />
                </div>

                <noundry-select 
                    label="Country" 
                    name="@nameof(Model.Country)"
                    bind="@Model.Country">
                    <noundry-option value="USA">United States</noundry-option>
                    <noundry-option value="Canada">Canada</noundry-option>
                    <noundry-option value="UK">United Kingdom</noundry-option>
                    <noundry-option value="Germany">Germany</noundry-option>
                    <noundry-option value="France">France</noundry-option>
                    <noundry-option value="Australia">Australia</noundry-option>
                    <noundry-option value="Other">Other</noundry-option>
                </noundry-select>

                <noundry-textarea 
                    label="Notes" 
                    name="@nameof(Model.Notes)"
                    rows="3"
                    placeholder="Additional notes about this customer..."
                    bind="@Model.Notes" />
            </div>
        </div>

        <!-- Customer Status -->
        <div class="mt-6 border-t border-gray-200 pt-6">
            <h4 class="text-lg font-medium text-gray-900 mb-4">Customer Status</h4>
            <noundry-checkbox 
                label="Active Customer (can place orders and access services)" 
                name="@nameof(Model.IsActive)"
                bind="@Model.IsActive" />
        </div>

        <!-- Form Actions using Noundry.UI buttons -->
        <div class="mt-8 border-t border-gray-200 pt-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <noundry-button 
                        type="submit"
                        variant="primary"
                        size="lg"
                        loading="@Model.IsLoading"
                        loading-text="@(Model.IsEditMode ? "Updating..." : "Creating...")"
                        disabled="@Model.IsLoading">
                        @(Model.IsEditMode ? "‚úèÔ∏è Update Customer" : "‚ûï Create Customer")
                    </noundry-button>

                    <noundry-button 
                        type="button"
                        variant="secondary"
                        on:click="@(() => Model.ClearForm())">
                        üóëÔ∏è Clear Form
                    </noundry-button>
                </div>

                <div class="flex items-center space-x-3">
                    <noundry-button 
                        type="button"
                        variant="outline"
                        on:click="@(() => Model.FillSampleData())">
                        ‚ö° Fill Sample Data
                    </noundry-button>

                    <div asp-if="@Model.IsEditMode" class="text-sm text-gray-500">
                        <noundry-badge variant="info">
                            Customer ID: @Model.CustomerId
                        </noundry-badge>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- Real-time Validation Summary -->
    <div asp-if="@(!Model.IsValid)" class="mt-6 bg-red-50 border border-red-200 rounded-md p-4">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
            </div>
            <div class="ml-3">
                <h4 class="text-sm font-medium text-red-800">Please correct the following errors:</h4>
                <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                        @foreach (var error in Model.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>